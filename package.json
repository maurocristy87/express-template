{
    "name": "nodejs-ddd-skeleton",
    "version": "1.0.0",
    "description": "NodeJS Skeleton",
    "main": "app.ts",
    "scripts": {
        "start": "NODE_PATH=./src ts-node -r tsconfig-paths/register --files src/app.ts",
        "dev": " NODE_PATH=./src nodemon -r tsconfig-paths/register src/app.ts",
        "build": "NODE_PATH=./src tsc -p .",
        "lint": "eslint . --ext .ts",
        "lint-and-fix": "eslint . --ext .ts --fix",
        "prettier-format": "prettier --write \"src/**/*.{ts,js,css,html}\"",
        "prettier-check": "prettier --check \"src/**/*.{ts,js,css,html}\"",
        "test": "NODE_PATH=./src jest -i --passWithNoTests",
        "cli": "NODE_PATH=./src ts-node -r tsconfig-paths/register src/cli.ts"
    },
    "author": "NFTStudios",
    "license": "ISC",
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-validator": "^6.10.1",
        "fast-glob": "^3.2.11",
        "inversify": "^6.0.1",
        "inversify-binding-decorators": "^4.0.0",
        "inversify-express-utils": "^6.3.2",
        "mongodb": "^4.5.0",
        "nodemon": "^2.0.7",
        "reflect-metadata": "^0.1.13",
        "swagger-jsdoc": "^6.2.1",
        "swagger-ui-express": "^4.3.0",
        "tsconfig-paths": "^4.2.0",
        "winston": "^3.3.3",
        "winston-daily-rotate-file": "^4.7.1"
    },
    "devDependencies": {
        "@types/bson": "^4.2.0",
        "@types/cors": "^2.8.9",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.11",
        "@types/jest": "^26.0.23",
        "@types/mongodb": "^3.6.8",
        "@types/node": "^15.0.1",
        "@types/supertest": "^2.0.11",
        "@types/swagger-jsdoc": "^6.0.1",
        "@types/swagger-ui-express": "^4.1.3",
        "@typescript-eslint/eslint-plugin": "^5.38.0",
        "@typescript-eslint/parser": "^5.38.0",
        "eslint": "^8.23.1",
        "jest": "^26.6.3",
        "prettier": "^2.2.1",
        "supertest": "^6.1.3",
        "ts-jest": "^26.5.5",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.3"
    }
}
